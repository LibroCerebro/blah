<div class="flash_messages page-gutter">
  <% [:success, :notice, :error, :alert].each do |type| %>
    <%- alert_class = type == :notice ? 'info' : type %>
    <% if flash[type] %>
      <div class="flash-message-container alert-<%=alert_class%>"><%= flash[type] %>
         <a class="close" data-dismiss="alert" href="#">x</a>
      </div>
    <% end %>
  <% end %>
</div>