<dl class="defList">  
  <% @holdings_records.each do |holding_record| %>
    <% if @holdings_records.first == holding_record %>
      <dt>Location</dt>
    <% else %>
      <dt></dt>
    <% end %>
    <dd>
        <% if holding_record.availability == "AVAILABLE" then %>
          <i title="Available" class="icon-ok-sign"></i>
        <% else %>
          <i title="Not available" class="icon-remove-sign"></i>
          &nbsp;<%= holding_record.availability %>
        <% end %>
        &nbsp;<%= holding_record.local_location %>
    </dd>
<% end %>
</dl>

