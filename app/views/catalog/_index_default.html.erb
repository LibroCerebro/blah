      <% if document.has? 'format' %>
        <dt class="blacklight-format-dt">Format</dt>
	      <dd class="blacklight-format-dd"><%= render_format_icon( document ) %>&nbsp;<%= render_index_field_value :document => document, :field => "format" %> </dd>
