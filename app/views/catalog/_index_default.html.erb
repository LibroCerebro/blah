      <% if document.has? 'lc_callnum_display' %>
        <dt class="blacklight-class-no-dt">Class number</dt>
	      <dd class="blacklight-class-no-dd"><%= render_shelved_icon %>&nbsp;<%= render_index_field_value :document => document, :field => 'lc_callnum_display' %></dd>
      <% end %>
</dl>
