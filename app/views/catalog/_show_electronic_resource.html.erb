<div class="row-fluid">
  <div id="document-header" class="span12">
    <%= render_document_heading.html_safe %>
    <%= display_field_within_element(document, 'format' , element='h5') %>
  </div>
</div>
<div class="row-fluid">
     <div class="span12">
        <h5>Record</h5>
        <dl class="defList">
          <%= display_field(document, 'description_display', 'Description', 'description') %>
          <%= display_field(document, 'subject_t', 'Subject', 'subject') %>
          <%= display_field(document, 'lc_callnum_display', 'Call number', 'call') %>
          <%= display_field(document, 'coverage_display', 'Coverage', 'coverage') %>
          <%= display_field(document, 'additional_info_display', 'Additional information', 'add-info') %>
        </dl>
        <h5>Access information</h5>
        <dl class="defList">
          <%= display_field(document, 'access_info_display', 'Access', 'access-info') %>
          <%= display_field(document, 'auth_users_display', 'Authorised users', 'auth-users') %>
          <%= display_field(document, 'published_vern_display', 'Published', 'pub') %>
          <%= display_field(document, 'isbn_t', 'ISBN', 'isbn') %>
          <%= display_field(document, 'terms_display', 'Terms of use', 'terms', {:display_as_link => true, :link_text => 'View license terms'}) %>
        </dl>
     </div>
</div>






