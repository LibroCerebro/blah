<h3 class="index_title"><%= t('blacklight.search.documents.counter', :counter => (document_counter + 1 + @response.params[:start].to_i)) %><%= link_to_document document, :label=>document_show_link_field, :counter => (document_counter + 1 + @response.params[:start].to_i) %></h3>

<%= display_field_within_element(document, 'title_series_t' , element='h5') %>
<%= display_field_within_element(document, 'author_display' , element='h5') %>
<%= display_field_within_element(document, 'author_addl_t' , element='h5') %>
<%= display_field_within_element(document, 'pub_date' , element='h5') %>

<dl class="defList"> 
      <% if document.has? 'format' %>
        <dt class="blacklight-format">Format</dt>
	      <dd class="blacklight-format"><%= render_format_icon( document ) %>&nbsp;<%= render_index_field_value :document => document, :field => "format" %> </dd>
      <% end %>

     <%= display_field(document, 'url_fulltext_display', 'Online', 'online', {:display_as_link => true, :link_text => 'Access this resource online'}) %>
   
</dl>
<%= jquery_holdings_display(document.id) %>


