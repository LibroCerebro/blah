<div id="main-search" class="search">
    <%= form_tag search_action_url, :method => :get, :class => 'form-inline search-form' do %>
      <span class="search-label"><%= t('blacklight.search.form.q') %></span>
      <%= search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page]).html_safe %>
      <%- search_tag = search_fields.empty? ? "" : select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), :title => t('blacklight.search.form.search_field.title'), :class=>"search-field") %>
      <div class='input-append'>
        <%= search_tag %><%= text_field_tag :q, params[:q], :class => "q input-xlarge search-query" %>
        <%= submit_tag 'Search', :class=>'btn' %>
        <%= link_to 'Advanced search', params.merge(:controller=>"advanced", :action=>"index") , :class=>"advanced_search"%> 
      </div>
    <% end %>
   </div>



