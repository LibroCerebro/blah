<div class="page-gutter">
  <h4><%= t('blah.email_record.form.title') %></h4>
  <%= form_tag url_for(:controller => "catalog", :action => "email"), :id => 'email_form', :method => :post, :honeypot => true do %>
    <%= label_tag(:to, t('blah.email_record.form.to'), :class=>'form-label') %>
    <%= text_field_tag :to %><br/>
    <%= label_tag(:message, t('blah.email_record.form.message'), :class=>'form-label') %>
    <%= text_area_tag :message %><br/>
    <% @documents.each do |doc| %>
      <%=hidden_field_tag "id[]", doc.get(:id)%>
    <% end %>
    <%- if params[:sort] -%>
      <%= hidden_field_tag "sort", params[:sort] %>
    <%- end -%>
    <%- if params[:per_page] -%>
      <%= hidden_field_tag "per_page", params[:per_page] %>
    <%- end -%>
    <%= submit_tag t('blah.email_record.form.submit'), :class=>'btn square-corners' %>
  <% end %>
</div>
